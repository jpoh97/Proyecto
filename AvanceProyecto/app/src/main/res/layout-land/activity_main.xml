<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.destebanalvarez.avanceproyecto.MainActivity"
    android:background="#b6b6b6">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

           <TextView
               android:layout_width="fill_parent"
               android:layout_height="wrap_content"
               android:text="@string/bienvenido"
               android:textSize="45dp"
               android:layout_marginTop="20dp"
               android:layout_marginLeft="130dp"
               android:id="@+id/bienv"
               android:textColor="#ffffff" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="@string/empezar"
                android:layout_below="@+id/bienv"
                android:onClick="goElecciones"
                android:layout_marginLeft="150dp"
                android:id="@+id/elegir"
                android:layout_gravity="center_horizontal"
                android:textColor="#ffffff"
                android:background="#795548" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Registrar"
                android:onClick="goRegistrar"
                android:id="@+id/register"
                android:layout_below="@+id/bienv"
                android:layout_toRightOf="@+id/elegir"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="30dp"
                android:layout_gravity="center_horizontal"
                android:textColor="#ffffff"
                android:background="#795548" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/grupos"
                android:textSize="20dp"
                android:layout_below="@+id/elegir"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:id="@+id/grupos"
                android:textColor="#ffffff" />

            <Button
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:text="Unirse a partida existente"
                android:onClick="goCliente"
                android:id="@+id/cliente"
                android:layout_below="@+id/grupos"
                android:layout_toRightOf="@+id/elegir"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:textColor="#ffffff"
                android:background="#795548" />

            <Button
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Crear partida"
                android:layout_below="@+id/grupos"
                android:onClick="goServidor"
                android:layout_marginLeft="50dp"
                android:id="@+id/servidor"
                android:layout_gravity="center_horizontal"
                android:textColor="#ffffff"
                android:background="#795548" />
        </RelativeLayout>
    </ScrollView>

</LinearLayout>
