<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.destebanalvarez.avanceproyecto.Game"
    android:background="#b6b6b6">
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


    <TextView
        android:layout_width="100dp"

        android:layout_height="45dp"
        android:id="@+id/Item1"
        android:textSize="20dp"
        android:hint="Item1"
        android:layout_marginTop="10dp"
        android:textColor="#ffffff"
        />

    <EditText
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_toRightOf="@+id/Item1"
        android:layout_marginLeft="20dp"
        android:id="@+id/text1"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:id="@+id/Item2"
        android:layout_below="@+id/Item1"
        android:textSize="20dp"
        android:hint="Item2"
        android:layout_marginTop="10dp"
        android:textColor="#ffffff"

        />

    <EditText
        android:layout_marginTop="10dp"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_toRightOf="@+id/Item2"
        android:layout_marginLeft="20dp"
        android:id="@+id/text2"
        android:layout_below="@+id/text1"/>

    <EditText
        android:layout_marginTop="10dp"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_toRightOf="@+id/Item3"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/text2"
        android:id="@+id/text3"/>

    <EditText
        android:layout_marginTop="10dp"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_toRightOf="@+id/Item4"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/text3"
        android:id="@+id/text4"/>

    <EditText
        android:layout_marginTop="10dp"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_toRightOf="@+id/Item5"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/text4"
        android:id="@+id/text5"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:id="@+id/Item3"
        android:layout_below="@+id/Item2"
        android:textSize="20dp"
        android:hint="Item3"
        android:textColor="#ffffff"
        android:layout_marginTop="10dp"

        />

    <TextView
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:id="@+id/Item4"
        android:layout_below="@+id/Item3"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:textColor="#ffffff"
        android:hint="Item4"


        />

    <TextView
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:id="@+id/Item5"
        android:layout_below="@+id/Item4"
        android:textSize="20dp"
        android:hint="Item5"
        android:textColor="#ffffff"
        android:layout_marginTop="10dp"

        />

    <TextView
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:id="@+id/showl"
        android:textSize="30dp"
        android:text="Letra"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/text1"
        android:layout_marginLeft="30dp"
        android:gravity="center_horizontal"
        android:textColor="#ffffff"
                />

            <TextView
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:id="@+id/showletra"
        android:textSize="30dp"
        android:hint="letra"
        android:layout_below="@+id/showl"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/text2"
        android:layout_marginLeft="30dp"
        android:gravity="center_horizontal"
        android:textColor="#000000"
                android:autoText="false" />

            <TextView
                android:layout_width="150dp"
                android:layout_height="45dp"
                android:id="@+id/showp"
                android:textSize="30dp"
                android:text="Puntaje"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/text3"
                android:layout_marginLeft="30dp"
                android:layout_below="@+id/showletra"
                android:gravity="center_horizontal"
                android:textColor="#ffffff"
                />


            <TextView
                android:layout_width="150dp"
        android:layout_height="45dp"
        android:id="@+id/showpunt"
        android:textSize="30dp"
        android:hint="puntaje"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/text4"
        android:layout_marginLeft="30dp"
        android:layout_below="@+id/showp"
        android:gravity="center_horizontal"
        android:textColor="#000000"
        />


    <Button
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:text="@string/cont"
        android:onClick="goPuntaje"
        android:background="#795548"
        android:layout_alignTop="@+id/Item5"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="#ffffff" />

        </RelativeLayout>
    </ScrollView>


</RelativeLayout>
